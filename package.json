{
  "name": "chinese-conv",
  "description": "我就懶，無依賴的，簡繁轉換解決方案。very simple solution for lazy people, no dependencies, converting simplified to traditional and traditional to simplified.",
  "version": "3.2.1",
  "type": "module",
  "packageManager": "pnpm@8.10.0",
  "exports": {
    ".": "./src/index.ts",
    "./libs": "./src/libs/**",
    "./dist": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "./src/**",
    "./dist/**"
  ],
  "keywords": [
    "Traditional",
    "unicode",
    "Simplified",
    "conversion",
    "Chinese",
    "convert",
    "transform"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@vitest/coverage-v8": "2.1.4",
    "bun": "1.1.34",
    "bun-plugin-isolated-decl": "0.1.6",
    "del-cli": "6.0.0",
    "oxc-transform": "0.34.0",
    "prettier": "3.3.3",
    "prettier-plugin-jsdoc": "1.3.0",
    "typescript": "5.6.3",
    "vite": "5.4.10",
    "vitest": "2.1.4"
  },
  "scripts": {
    "dev": "bun run --watch ./build.mjs",
    "build": "bun run ./build.mjs",
    "test": "vitest run --coverage",
    "test.w": "vitest watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aqzhyi/chinese-conv.git"
  },
  "author": {
    "name": "Nemuke (ねむけ)",
    "email": "pleasurazy@gmail.com",
    "url": "https://github.com/aqzhyi"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aqzhyi/chinese-conv/issues"
  },
  "homepage": "https://github.com/aqzhyi/chinese-conv#readme",
  "private": false
}
